<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="119dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="65dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="119dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="65dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/Ac"
                style="@style/Button1"
                android:background="@drawable/round"
                android:text="C"
                android:textColor="#FD5B29"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/num7"
                style="@style/Button2"
                android:text="7"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/num4"
                style="@style/Button2"
                android:text="4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/num1"
                style="@style/Button2"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/sqrt"
                style="@style/Button2"
                android:text="xÂ²"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/on"
                style="@style/Button1"
                android:text="OFF"
                android:textColor="#FD5B29"
                android:background="@drawable/round"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/num8"
                style="@style/Button2"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/num5"
                style="@style/Button2"
                android:text="5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/num2"
                style="@style/Button2"
                android:text="2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/num0"
                style="@style/Button2"
                android:text="0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/div"
                style="@style/Button1"
                android:text="/"
                android:textColor="#FD5B29"
                android:textAlignment="center"
                android:textSize="40dp"
                android:background="@drawable/round"
                android:textStyle="bold" />

            <Button
                android:id="@+id/num9"
                style="@style/Button2"
                android:text="9"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/num6"
                style="@style/Button2"
                android:text="6"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/num3"
                style="@style/Button2"
                android:text="3"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/dot"
                style="@style/Button2"
                android:text="."
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/del"
                style="@style/Button1"
                android:background="@drawable/delete5"
                android:backgroundTint="#FD5B29"
                android:src="@drawable/round" />

            <Button
                android:id="@+id/mul"
                style="@style/Button1"
                android:text="x"
                android:textStyle="bold"
                android:textColor="#FD5B29"
                android:gravity="center"
                android:background="@drawable/round"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/sub"
                style="@style/Button1"
                android:text="-"
                android:textColor="#FD5B29"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/round"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/add"
                style="@style/Button1"
                android:text="+"
                android:textSize="40dp"
                android:textColor="#FD5B29"
                android:background="@drawable/round"
                android:textStyle="bold" />

            <Button
                android:id="@+id/equal"
                style="@style/Button1"
                android:background="@drawable/round"
                android:text="="
                android:textColor="#FD5B29"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

